Routine_Spielsonntagefestlegung.cpp : Diese Datei enthält die Funktion "main". Hier beginnt und endet die Ausführung des Programms.
// 

#include <iostream>
#include <string>


int Spk_Nr = 0;
int _2BUL[28] = { 0 };
int _OBL[28] = { 0 };
int _1RLP[28] = { 0 };
int _2RLP[28] = { 0 };
int _1PFL[28] = { 0 };
int _2PFL[28] = { 0 };

 int Eingabe_Spielklassen_Nr(int Spk_Nr)
{
    
    while (Spk_Nr < 1 || Spk_Nr > 6)
    {
        std::cout << "Spielklasse Nr.:  " << Spk_Nr;
        std::cin >> Spk_Nr; // Diese wichtige Angabe des Anwenders gilt nur innerhalb der Funktion!!!
                            // Danach wird ihr sofort automatisch der Wert 0 zugewiesen!!!
                            // Um sie außerhalb der Funktion nutzen zu können, muss sie mit <return>
                            // übergeben werden.
        std::cin.ignore();
        std::cout << std::endl;
        return Spk_Nr;  // Rückgabe für das Aufrufen im Hauptprogramm --> Übergabe dort an int Spielklassennummer
    };
    
    std::cout << "Es wurde folgende Spielklassen-Nr. gewaehlt " << Spk_Nr << "\n";
    
}

void Ausgabe_Spielklasse(int Spielklasse[28])
{
    for (int j = 1; j <= 27; j++)  // Dem Zähler wird hier mit "j" einen anderen Namen gegeben, weil sonst ein
        // stack-overflow-Fehler produziert wird.
    {
        std::cout << "Spielsonntag Nr. " << j << " " << Spielklasse[j] << " \n";
    }
    std::cout << "\n\n\n";
}

int Eingabe_Spielsonntagsnummern(int Sps_Feld[28], int Sps_Nr) 
{   
            for (int i = 1; i <= 9; i++) // Da nur 9 Runden zu vergeben sind, muss nicht das ganze
                                         // Feld durchgegangen werden.
            {
                while (Sps_Nr < 1 || Sps_Nr > 27)
                {
                    std::cout << "Runde "<< i << " wird gespielt an Spielsonntag Nr. ";
                    std::cin >> Sps_Nr;
                    std::cin.ignore();
                };
                
                Sps_Feld[Sps_Nr] = 1;     
                Sps_Nr = 0;
            }
            return Sps_Feld[28];   // Rückgabewert fuer das Feld Spielsonntage der gewünschten Spielklasse
}

int main()
{
    // ++++++++++++++++++++++++++++++++++++++++++++++++++++++
    // + Festlegung der Spielsonntage für die Spielklassen  +                     !
    // ++++++++++++++++++++++++++++++++++++++++++++++++++++++
       
    std::cout << "++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ \n";
    std::cout << "+   Festlegung der Spielsonntage fuer die Spielklassen   + \n";
    std::cout << "++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ \n\n\n";
    std::cout << "Den Spielklassen stehen 27 Sonntage zur Verfuegung: \n\n";
    int Sps_Feld[28]{ 0 }; // Es wird ein Feld mit 28 Stellen angelegt,
                        // damit das erste Feld, also die Stelle 0,
                        // unberücksichtgt bleiben kann, sowohl bei
                        // der Eingabe als auch bei der Ausgabe.
                        // Man muss also bei der Definition von Feldern
                        // immer darauf achten, sie um eins höher zu
                        // setzen, damit man keine Stelle Null belegen
                        // muss.
    
    int Sps_Nr = 0;
    int Spstg_Nr = 0;
    
    // Der Anwender soll angeben an welchem der zur Verfügung stehenden Spielsonntage 
    // in den Spielklassen von 2. Bundesliga bis 2. Pfalz-Liga abwärts Runden stattfinden.
    
    std::cout << "Fuer welche Spielklasse sollen die Runden festgelegt werden? \n";
    std::cout << "1 - 2. Bundesliga \n";
    std::cout << "2 - Oberliga \n";
    std::cout << "3 - 1. Rheinland-Pfalz-Liga \n";
    std::cout << "4 - 2. Rheinland-Pfalz-Liga \n";
    std::cout << "5 - 1. Pfalz-Liga \n";
    std::cout << "6 - 2. Pfalz-Liga \n";

    
    int Spielklassennummer;
    Spielklassennummer = Eingabe_Spielklassen_Nr(Spk_Nr);  // Die Übergabevariable Spk_Nr übergibt ihren Wert aus der aufgerufenen Funktion
                                                           // an die Integervariable Spielklassennummer. Mit ihr kann man im Hauptprogramm
                                                           // weiterarbeiten.
    // Ausgabe_Spielklasse(Sps_Feld); //  --> würde an dieser Stelle ein noch leeres Feld (mit Nullen aufgefüllt) ausgeben.
    std::cout << "An welchen zur Verfuegung stehenden Spielsonntagen wird in der Spielklasse Nr: " << Spielklassennummer << " gespielt ? \n";
    std::cout << "1...27? \n";
    Eingabe_Spielsonntagsnummern(Sps_Feld, Spstg_Nr);
    std::cout << "\n\n";
    std::cout << "Die Spielklasse " << Spielklassennummer << " hat nach Festlegung der 27 zur Verfuegung stehenden Spielsonntage folgende Runden: \n";
    std::cout << "0=keine Runde, 1=Runde, \n\n";
    Ausgabe_Spielklasse(Sps_Feld);
    std::cout << "\n\n\n";
    
    std::cout << "Nachfolgend wird getestet, ob tatsaechlich die Spieltage in das gewuenschte Feld der gewuenschten Spielklasse " << Spielklassennummer << " geschrieben worden sind. \n\n";

    for (int j = 1; j <= 27; j++)  // Dem Zähler wird hier mit "j" einen anderen Namen gegeben, weil sonst ein
        // stack-overflow-Fehler produziert wird.
    {
        // Übertragung aus der Rückgabe (s. obige Funktion) des Feldes Sps_Feld an das gewünschte Spielklassenfeld
        
        switch (Spielklassennummer)
        {
        case 1: _2BUL[j] = Sps_Feld[j];
            std::cout << "Spielsonntage " << " - Nr.:  " << j << "  " << _2BUL[j] << " \n";
            ; break;
        case 2: _OBL[j] = Sps_Feld[j];
            std::cout << "Spielsonntage " << " - Nr.:  " << j << "  " << _OBL[j] << " \n";
            break;
        case 3: _1RLP[j] = Sps_Feld[j];
            std::cout << "Spielsonntage " << " - Nr.:  " << j << "  " << _1RLP[j] << " \n";
            break;
        case 4: _2RLP[j] = Sps_Feld[j]; 
            std::cout << "Spielsonntage " << " - Nr.:  " << j << "  " << _2RLP[j] << " \n";
            break;
        case 5: _1PFL[j] = Sps_Feld[j];
            std::cout << "Spielsonntage " << " - Nr.:  " << j << "  " << _1PFL[j] << " \n";
            break;
        case 6: _2PFL[j] = Sps_Feld[j];
            std::cout << "Spielsonntage " << " - Nr.:  " << j << "  " << _2PFL[j] << " \n";
            break;
        default: std::cout << "Irgendetwas ist schief gelaufen. \n";
            break;
        }        
    }
    std::cout << "\n\n\n";

                       
    return 0;

        

   }
